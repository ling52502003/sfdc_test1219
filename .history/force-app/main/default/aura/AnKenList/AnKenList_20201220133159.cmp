<aura:component controller="AnkenController"
    implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
    access="global">
    <aura:attribute name="ankenlist" type="List<Anken__c>" />

    <div class="container">
        <h1 aligh="center">案件</h1>
        <table>
          <tr aligh="center">案件一覧</tr>
          <tr>
            <th>No</th>
            <th>案件名</th>
            <th>案件種別</th>
            <th>案件開発種別</th>
            <th>所在地（都県）</th>
            <th>所在地（市））</th>
          </tr>
          <aura:aura:iteration items="{!v.ankenlist}" var="ankenItem" ndexVar="indx">
          <tr>
            <td>{!indx}</td>
            <td>{!ankenItem.Name}</td>
            <td>{!ankenItem.Type__c}</td>
            <td>{!ankenItem.AnkenSyubetu__c}</td>
            <td>{!ankenItem.Address_A__c}</td>
            <td>{!ankenItem.Address_B__c}</td>
          </tr>
          </aura:aura:iteration>
        </table>
    </div>
</aura:component>